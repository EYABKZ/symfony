{# templates/author/update.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Update Author{% endblock %}

{% block body %}
    <h1>Update Author</h1>

    {{ form_start(form) }}

    <div class="form-group">
        {{ form_row(form.Name, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.Email, {'attr': {'class': 'form-control'}}) }}
    </div>

    {# Add more form fields for other author properties as needed #}

    <div class="form-group">
        {{ form_row(form.update, {'attr': {'class': 'btn btn-primary'}}) }}
    </div>

    {{ form_end(form) }}

    <a href="{{ path('showAll') }}" class="btn btn-secondary">Back to Author List</a>
{% endblock %}
